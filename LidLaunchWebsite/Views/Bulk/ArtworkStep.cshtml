<script type="text/javascript">
    var artworkPreExisting = false;
    function goToStepNumber(stepNumber) {
        if (stepNumber == 1) {
            $('#artworkStep1').slideDown();
            $('#artworkStep2').hide();
            $('#artworkStep3').hide();
            $('#artworkStep4').hide();
        }
        if (stepNumber == 2) {
            $('#artworkStep1').hide();
            $('#artworkStep2').slideDown();
            $('#artworkStep3').hide();
            $('#artworkStep4').hide();
        }
        if (stepNumber == 3) {
            $('#artworkStep1').hide();
            $('#artworkStep2').hide();
            $('#artworkStep3').slideDown();
            $('#artworkStep4').hide();
        }
        if (stepNumber == 4) {
            $('#artworkStep1').hide();
            $('#artworkStep2').hide();
            $('#artworkStep3').hide();
            $('#artworkStep4').slideDown();
        }
    }
    function firstTimeOrder() {
        $('#artworkNew').show();
        $('#artworkExisting').hide();
        $('#artworkButtonLeft').addClass('selected');
        $('#artworkButtonRight').removeClass('selected');
        artworkPreExisting = false;
        updateBulkTotals();
    }
    function preExistingOrder() {
        $('#artworkNew').hide();
        $('#artworkExisting').show();
        $('#artworkButtonLeft').removeClass('selected');
        $('#artworkButtonRight').addClass('selected');
        artworkPreExisting = true;
        updateBulkTotals();
    }
</script>
<style type="text/css">
    .artworkStepHeader {
        padding: 20px;
        background: #39b91c;
        color: #fff;
        font-size: 20px;
        margin-top: 20px;
    }
    .artworkStep {
        margin:0 10px;
    }
    .artworkStepButton {
        width: 40%;
