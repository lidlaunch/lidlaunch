@model List<LidLaunchWebsite.Models.WebsiteProduct>
@{
    ViewBag.Title = "LidLaunch - Shop For Custom Hats";
}
<style typx="text/css">
    #topSearch {
        display: block;
    }
</style>
<div ng-controller="ShopCtrl as shop">
    <div id="shopWrapper">
        <div id="searchResults">
            <div id="ProductListSection">
                @foreach (LidLaunchWebsite.Models.WebsiteProduct prod in Model)
                {
                <div class="productListed" onclick="window.location='/Product?id=@prod.ProductId'">
                    <img src="~/Images/DesignImages/InUse/@prod.Image" width="250" class="productImage" /><br />
                    <span class="prodName">@prod.Name</span><br />
                    <span class="prodPrice">$@prod.Price</span>
                    @if (prod.ParentCount > 0)
                    {
                        <div class="multiOptionsIcon">
                            <img src="~/Images/MoreColors.png" height="20" /><br />More color options available
                        </div>
                    }
                </div>

                }
                @if (Model.Count == 0)
                {
                    <h2>There are no products for this category yet...</h2>
                    <h2>You should probably make one!</h2>
                }
            </div>

        </div><!--/searchResults-->
    </div><!--/productDetails-->
</div>
